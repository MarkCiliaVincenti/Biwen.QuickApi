@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        Biwen.QuickApi.DocSite
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://github.com/vipwan/Biwen.QuickApi" target="_blank">Github Repository</a>
        <FluentSpacer />
        <a href="https://github.com/vipwan" target="_blank">&copy; @(DateTime.Now.Year) MIT 万雅虎</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
